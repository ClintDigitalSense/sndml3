<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <ThresholdFilter level="info" />
      <PatternLayout>
        <Pattern>%d{HH:mm:ss} %level [%thread] %logger{1} %X{context} %marker: %msg%n</Pattern>  
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>
    <Logger name="org.apache.http" level="info" />
    <Logger name="servicenow.common" level="info" />>
  </Loggers>
</Configuration>